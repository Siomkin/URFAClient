{
  "name": "siomkin/urfa-client",
  "description": "Universal PHP client billing system NetUp UTM5 based api.xml",
  "version": "2.0.0",
  "type": "library",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Konstantin Shum",
      "email": "ks.shym@gmail.com",
      "homepage": "http://www.shym.su",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-openssl": "*",
    "ext-SimpleXML": "*",
    "ext-bcmath": "*",
    "ext-filter": "*",
    "ext-hash": "*",
    "psr/log": "^1.1",
    "monolog/monolog": "^1.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "UrfaClient\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs --runtime-set ignore_warnings_on_exit 1",
    "cs-fix": "phpcbf --runtime-set ignore_warnings_on_exit 1"
  }
}
